<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_hud"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stat_bars"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center|start"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/healthbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/stat_bar_1xx" />

        <ProgressBar
            android:id="@+id/ammobar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/stat_bar_x1x" />

        <ProgressBar
            android:id="@+id/expbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/stat_bar_xx1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="bottom|end"
        android:orientation="vertical">

        <Button
            android:id="@+id/upgrades_enter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:backgroundTint="@color/purple_500"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Upgrades"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/joystick_region"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|left">

        <Button
            android:id="@+id/joystick_knob"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#0007EAFF" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/joystick_region2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|right">

        <Button
            android:id="@+id/joystick_knob2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="#0007EAFF" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/joystick_region3"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/ability_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/purplecircle" />

        <ProgressBar
            android:id="@+id/circularProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"

            android:progressDrawable="@drawable/circular_progress" />


    </FrameLayout>

</FrameLayout>